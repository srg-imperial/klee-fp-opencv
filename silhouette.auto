#!/bin/sh

. ./Makefile.config

NAME=$1
shift

OUTDIR=silhouette.auto.out.$NAME
rm -rf $OUTDIR
mkdir $OUTDIR

for fmt in u8 f32 ; do
	id=$fmt
	echo $id
	$KLEE_BUILD_PATH/bin/klee -libc=uclibc -output-source=false -output-istats=false -output-dir=$OUTDIR/klee-out-$id -instrument-simd ./silhouette.opt.bc -f $fmt "$@" > $OUTDIR/$id.log 2>&1
done
